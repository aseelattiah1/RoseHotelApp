<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dlRoomService"
    tools:context=".ResidenceActivity">


    <RelativeLayout
        android:id="@+id/holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutTop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResidenceActivity">

        <ImageView
            android:id="@+id/menuImageViewService"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="@+id/imageView13"
            app:layout_constraintTop_toTopOf="@+id/imageView13"
            app:srcCompat="@drawable/menu" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/logo" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/guest_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView13"
            app:layout_constraintVertical_bias="1.0">

            <Button
                android:id="@+id/roomServiceBtn"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/btn_bg"
                android:text="Room service"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/showUsernameRoomServiceTV" />

            <Button
                android:id="@+id/laundryBtn"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_bg"
                android:text="Laundry"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="@+id/roomServiceBtn"
                app:layout_constraintStart_toStartOf="@+id/roomServiceBtn"
                app:layout_constraintTop_toBottomOf="@+id/roomServiceBtn" />

            <Button
                android:id="@+id/button8"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_bg"
                android:text="Restaurant"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="@+id/laundryBtn"
                app:layout_constraintStart_toStartOf="@+id/laundryBtn"
                app:layout_constraintTop_toBottomOf="@+id/laundryBtn" />

            <Button
                android:id="@+id/button9"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_bg"
                android:text="Book a hall"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="@+id/button8"
                app:layout_constraintStart_toStartOf="@+id/button8"
                app:layout_constraintTop_toBottomOf="@+id/button8" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/roomServiceBtn"
                app:layout_constraintEnd_toStartOf="@+id/roomServiceBtn"
                app:layout_constraintTop_toTopOf="@+id/roomServiceBtn"
                app:srcCompat="@drawable/room_service" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/laundryBtn"
                app:layout_constraintEnd_toStartOf="@+id/laundryBtn"
                app:layout_constraintTop_toTopOf="@+id/laundryBtn"
                app:srcCompat="@drawable/tshirt" />

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/button8"
                app:layout_constraintEnd_toStartOf="@+id/button8"
                app:layout_constraintTop_toTopOf="@+id/button8"
                app:srcCompat="@drawable/restaurant" />

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/button9"
                app:layout_constraintEnd_toStartOf="@+id/button9"
                app:layout_constraintTop_toTopOf="@+id/button9"
                app:srcCompat="@drawable/book" />

            <TextView
                android:id="@+id/showRoomNumberRoomServiceTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/showUsernameRoomServiceTV"
                app:layout_constraintStart_toEndOf="@+id/showUsernameRoomServiceTV"
                app:layout_constraintTop_toTopOf="@+id/showUsernameRoomServiceTV" />

            <TextView
                android:id="@+id/showUsernameRoomServiceTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_viewRoomService"
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        tools:ignore="MissingConstraints" />
</androidx.drawerlayout.widget.DrawerLayout>